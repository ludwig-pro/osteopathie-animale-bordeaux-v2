---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero';
import AnimalSection from '../components/sections/AnimalSection/AnimalSection';
import CarteCabinet from '../components/sections/CarteCabinet';
import QuandConsulter from '../components/sections/QuandConsulter';
import OsteopathieAnimale from '../components/sections/OsteopathieAnimale';
import QuiSuisJe from '../components/sections/QuiSuisJe';
import Prix from '../components/sections/Prix';
import DeroulementConsultation from '../components/sections/DeroulementConsultation';
import ContactWrapper from '../components/contact/ContactWrapper';
import Footer from '../components/layout/Footer';

const title = 'Osteopathe Animalier Bordeaux - Agathe Lescout';
const description = "L'Ost√©opathe animalier Agathe Lescout, intervenant sur Bordeaux et Gironde!";
---

<BaseLayout title={title} description={description}>
  <div>
    <main id="root">
      <Hero client:only="react" />
      <div id="animaux">
        <AnimalSection client:only="react" />
      </div>
      <CarteCabinet client:visible />
      <QuandConsulter id="quand-consulter" client:visible />
      <Prix id="tarifs" client:visible />
      <DeroulementConsultation client:visible />
      <OsteopathieAnimale id="osteopathie" client:visible />
      <QuiSuisJe client:visible />
      <div class="recaptcha-wrapper">
        <ContactWrapper id="contact" client:visible />
      </div>
    </main>
    <Footer client:visible />
  </div>
</BaseLayout>
