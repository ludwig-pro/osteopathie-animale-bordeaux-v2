---
import { getImage } from 'astro:assets';
import Hero from '../../components/landing-page/hero/Hero';
import dogHomepage from '../../images/dog-homepage.jpg';

const [heroAvif, heroWebp] = await Promise.all([
  getImage({
    src: dogHomepage,
    widths: [480, 768, 1024, 1440, 1920],
    format: 'avif',
    quality: 60
  }),
  getImage({
    src: dogHomepage,
    widths: [480, 768, 1024, 1440, 1920],
    format: 'webp',
    quality: 75
  })
]);
---

<Hero
  client:load
  backgroundSources={{
    avif: heroAvif,
    webp: heroWebp
  }}
